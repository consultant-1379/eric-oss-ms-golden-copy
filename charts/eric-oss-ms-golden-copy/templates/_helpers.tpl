{{/*
Create image pull secrets for global (outside of scope)
*/}}
{{- define "eric-oss-ms-golden-copy.pullSecret.global" -}}
{{- $pullSecret := "" -}}
{{- if .Values.global -}}
  {{- if .Values.global.pullSecret -}}
    {{- $pullSecret = .Values.global.pullSecret -}}
  {{- end -}}
  {{- end -}}
{{- print $pullSecret -}}
{{- end -}}

{{/*
Create image pull secret, service level parameter takes precedence
*/}}
{{- define "eric-oss-ms-golden-copy.pullSecret" -}}
{{- $pullSecret := (include "eric-oss-ms-golden-copy.pullSecret.global" . ) -}}
{{- if .Values.imageCredentials -}}
  {{- if .Values.imageCredentials.pullSecret -}}
    {{- $pullSecret = .Values.imageCredentials.pullSecret -}}
  {{- end -}}
{{- end -}}
{{- print $pullSecret -}}
{{- end -}}

{{- define "eric-oss-ms-golden-copy.mainImagePath" -}}
    {{- $productInfo := fromYaml (.Files.Get "eric-product-info.yaml") -}}
    {{- $registryUrl := (index $productInfo "images" "eric-oss-ms-golden-copy" "registry") -}}
    {{- $repoPath := (index $productInfo "images" "eric-oss-ms-golden-copy" "repoPath") -}}
    {{- $name := (index $productInfo "images" "eric-oss-ms-golden-copy" "name") -}}
    {{- $tag := (index $productInfo "images" "eric-oss-ms-golden-copy" "tag") -}}
    {{- if .Values.global -}}
        {{- if .Values.global.registry -}}
            {{- if .Values.global.registry.url -}}
                {{- $registryUrl = .Values.global.registry.url -}}
            {{- end -}}
            {{- if not (kindIs "invalid" .Values.global.registry.repoPath) -}}
              {{- $repoPath = .Values.global.registry.repoPath -}}
            {{- end -}}
        {{- end -}}
    {{- end -}}
    {{- if .Values.imageCredentials -}}
        {{- if (index .Values "imageCredentials" "eric-oss-ms-golden-copy") -}}
            {{- if (index .Values "imageCredentials" "eric-oss-ms-golden-copy" "registry") -}}
                {{- if (index .Values "imageCredentials" "eric-oss-ms-golden-copy" "registry" "url") -}}
                    {{- $registryUrl = (index .Values "imageCredentials" "eric-oss-ms-golden-copy" "registry" "url") -}}
                {{- end -}}
            {{- end -}}
        {{- end -}}
        {{- if not (kindIs "invalid" .Values.imageCredentials.repoPath) -}}
            {{- $repoPath = .Values.imageCredentials.repoPath -}}
        {{- end -}}
    {{- end -}}
    {{- if $repoPath -}}
        {{- $repoPath = printf "%s/" $repoPath -}}
    {{- end -}}
    {{- $imagePath := printf "%s/%s/%s:%s" $registryUrl $repoPath $name $tag -}}
    {{- print (regexReplaceAll "[/]+" $imagePath "/") -}}
{{- end -}}

